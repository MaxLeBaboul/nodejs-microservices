{
  "name": "nodejs-microservices",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  
  "scripts": {
    "prettier": "./node_modules/.bin/prettier --check '**/*.{js,json,ts,yml,yaml}'",
    "prettier:write": "./node_modules/.bin/prettier --write \"**/*.{js,json,ts,yml,yaml}\"",
    "check-engines": "./node_modules/fbjs-scripts/node/check-dev-engines.js package.json",
    "lint": "eslint '{packages,apps,libs,test}/**/*ts' --fix --quiet",
    "prepare": "husky install",
    "build": "tsc -p tsconfig.build.json",
    "prebuild":"npm run check-engines && npm run clean",
    "clean": "rimraf build && rimraf coverage",
    "test": "npm run test:ci",
    "test:ci":"NODE_ENV=CI jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "fbjs-scripts": "^3.0.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
