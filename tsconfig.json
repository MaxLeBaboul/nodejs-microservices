{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
   "strictPropertyInitialization": false,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
  
  }
}